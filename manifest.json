{
  "manifest_version": 3,
  "name": "popupscreenshot",
  "description": "コピーしたものを基にテンプレートを使用して簡単に備忘録を作成してくれます",
  "version": "3.0.1",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],

  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "64": "/images/64.jpg",
      "128": "/images/128.jpg"
    }
  },

  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "64": "/images/64.jpg",
    "128": "/images/128.jpg"
  }
}